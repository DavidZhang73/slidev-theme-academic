{
  "name": "slidev-theme-academic",
  "version": "0.1.0",
  "author": {
    "name": "Alexander Eble",
    "email": "mail@alex-eble.de",
    "url": "https://www.alex-eble.de"
  },
  "license": "MIT",
  "keywords": [
    "academic",
    "slidev",
    "slidev-theme",
    "slidev-theme-academic"
  ],
  "scripts": {
    "build": "slidev build example.md",
    "dev": "slidev example.md --open",
    "export": "slidev export example.md",
    "release": "release-it",
    "screenshot": "slidev export example.md --format png"
  },
  "dependencies": {
    "@slidev/types": "^0.28.6",
    "codemirror-theme-vars": "^0.1.1",
    "prism-theme-vars": "^0.2.2",
    "theme-vitesse": "^0.1.14"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^4.2.0",
    "@slidev/cli": "^0.28.6",
    "release-it": "^14.12.5"
  },
  "engines": {
    "node": ">=14.0.0",
    "slidev": ">=0.19.3"
  },
  "slidev": {
    "colorSchema": "both",
    "highlighter": "all",
    "defaults": {
      "fonts": {
        "sans": "Nunito Sans",
        "mono": "Fira Code"
      },
      "hightlighter": "prism",
      "themeConfig": {
        "paginationX": "r",
        "paginationY": "t"
      }
    }
  }
}
